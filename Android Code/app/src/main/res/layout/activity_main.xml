<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gray_gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Welcome to Calorie Annihilator!"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pleaseChoose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/welcome"
        android:textColor="@android:color/white"
        android:text="Please choose an option:"
        android:textSize="20dp" />

    <Button
        android:id="@+id/avoidanceBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button_blue"
        android:text="Avoidance Mode"
        android:textSize="20dp"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bingeBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button_red"
        android:text="Binge Mode"
        android:textSize="20dp"
        android:layout_below="@+id/avoidanceBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/exerciseBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_orange"
        android:text="Log Exercise Event"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/bingeBtn" />

    <Button
        android:id="@+id/aboutBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_green"
        android:text="About Calorie Annihilator"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/exerciseBtn" />

    <TextView
        android:id="@+id/caloriesAvoided"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:text="Calories Avoided: 0"
        android:layout_below="@id/aboutBtn"
        android:layout_above="@+id/lbsOfSugarAvoided"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lbsOfSugarAvoided"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Lbs of sugar avoided: 0"
        android:textSize="20dp"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

